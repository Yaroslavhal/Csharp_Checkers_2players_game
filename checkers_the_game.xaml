<Window x:Class="Checkers_demo_2._0.checkers_the_game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Checkers_demo_2._0"
        mc:Ignorable="d"
        Title="checkers_the_game" Height="400" Width="800">
    <Grid x:Name="game" Background="Sienna">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="210"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="210"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Button Click="Button_Click" Background="Brown" FontSize="30" Margin="20" Foreground="White" FontWeight="Light">Restart</Button>
            <Label FontSize="30" Margin="20" Foreground="White" FontWeight="Light" HorizontalAlignment="Center">Rotating:</Label>
            <Button Name="rot" Click="Button_Click_1" Width="30" Height="30" FontSize="15" Foreground="White" Background="Brown" Content="off"></Button>
        </StackPanel>
        <Frame NavigationUIVisibility="Hidden" x:Name="desk" Grid.Row="0" Grid.Column="1"></Frame>
    </Grid>
</Window>
